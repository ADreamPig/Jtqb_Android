<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/act_buycard_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乐购超市"
        android:textColor="@color/font_black" />

    <TextView
        android:id="@+id/act_buycard_first_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_buycard_first_name"
        android:layout_marginTop="10dp"
        android:text="2016-01-02 12:30"
        android:textColor="@color/font_gray" />

    <TextView
        android:id="@+id/act_buycard_first_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="-290.00"
        android:textColor="@color/font_red"
        android:textSize="@dimen/font_mid" />

</RelativeLayout>