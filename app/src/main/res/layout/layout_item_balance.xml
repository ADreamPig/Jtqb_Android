<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/balance_tv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/balance_tv_cardStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:text=""
        android:layout_toRightOf="@id/balance_tv_card"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/mycard_item_realName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_item_mycard"
        android:layout_toRightOf="@id/balance_tv_cardStatus"
        android:paddingBottom="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:text="å®ž"
        android:textColor="@color/color_while"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/adapter_mycard_guashi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_guashi"
        android:layout_toRightOf="@id/balance_tv_cardStatus"
        android:layout_marginLeft="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/balance_tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/font_red"
        android:textSize="@dimen/font_small" />

    <View
        android:layout_below="@+id/balance_tv_balance"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />
</RelativeLayout>