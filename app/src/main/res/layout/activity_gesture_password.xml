<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#22EDA618"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/toolbar_margin_top"
      >

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="gestureBack"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_big"
            android:layout_centerVertical="true"
            android:textColor="@color/color_while"
            android:layout_gravity="left"
            android:text="手势密码" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gesture_iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/rszf_logo"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gesture_iv_ok"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/db_gesture_ok"
                android:visibility="gone" />

            <TextView
                android:id="@+id/gesture_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/color_while"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/gesture_tv_titleBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="2dp"
            android:textColor="@color/color_while"
            android:textSize="14sp" />
    </LinearLayout>


    <com.ningsheng.jietong.View.LockPattern
        android:id="@+id/gesture_lockPattern"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/act_gesture_password_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记手势密码？"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/font_blue"/>

</LinearLayout>


