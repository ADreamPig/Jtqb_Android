<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/paycard_record_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black"
        android:text="捷通卡"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/paycard_record_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/font_black"
        android:text="卡类型:"
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/paycard_record_tv_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/font_black"
        android:text=""
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/paycard_record_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/font_black"
        android:text=""
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/paycard_record_tv_payMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/font_black"
        android:text=""
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/paycard_record_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/font_black"
        android:text=""
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/paycard_record_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/font_black"
        android:text=""
        android:textSize="@dimen/font_small" />
</LinearLayout>