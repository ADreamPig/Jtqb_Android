<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_line_top_bottom"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收货人"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_small" />

        <EditText
            android:id="@+id/addressDetail_et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:minWidth="20dp"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_small" />

        <EditText
            android:id="@+id/addressDetail_et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:minWidth="20dp"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="省市地区"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/addressDetail_tv_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="addressDetailOnClick1"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:minWidth="20dp"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_small" />

        <EditText
            android:id="@+id/addressDetail_et_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:minWidth="20dp"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />


    <CheckBox
        android:id="@+id/addressDetail_cb_default"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:button="@null"
        android:drawableRight="@drawable/selec_radiogroup_card"
        android:gravity="center_vertical"
        android:text="设为默认地址"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_small" />
</LinearLayout>

<TextView
    style="@style/button"
    android:layout_marginTop="30dp"
    android:onClick="addressDetailOnClick2"
    android:text="保存" />
</LinearLayout>