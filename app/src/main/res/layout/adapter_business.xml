<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/color_while"
    android:padding="10dp">

    <ImageView
        android:id="@+id/adapter_business_image"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/image2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starbuckscoffee(虹桥店)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/adapter_business_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="9.5折"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="虹桥   美食餐饮"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/adapter_business_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/icon_juli"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>