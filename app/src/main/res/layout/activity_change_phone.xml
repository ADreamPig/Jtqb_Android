<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/changePhone_linear_main1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_line_top_bottom"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/changePhone_et_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/changePhone_et_yzm1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="请输入验证码"
                        android:inputType="phone"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/changePhone_tv_yzm1"
                        style="@style/button_small"
                        android:text="获取验证码" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/changePhone_tv_next1"
                style="@style/button"
                android:layout_marginTop="25dp"
                android:enabled="true"
                android:text="验证" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/changePhone_linear_main2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_line_top_bottom"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/changePhone_et_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/changePhone_et_yzm2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="请输入验证码"
                        android:inputType="phone"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/changePhone_tv_yzm2"
                        style="@style/button_small"
                        android:text="获取验证码" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/changePhone_tv_next2"
                style="@style/button"
                android:layout_marginTop="25dp"
                android:enabled="false"
                android:text="验证" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="手机丢失？请拨打客服电话进行更改"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/changePhone_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="400-887-1380"
            android:onClick="tel"
            android:textColor="@color/font_blue"
            android:textSize="@dimen/font_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="服务响应时间：09:00至22：00"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>

