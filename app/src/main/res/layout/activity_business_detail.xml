<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/act_business_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="10dp">

        <TextView
            android:id="@+id/act_business_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/font_mid" />

        <TextView
            android:id="@+id/act_business_detail_discunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/app_color"
            android:textSize="@dimen/font_big" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="商户信息"
        android:textColor="@color/color_black"
        android:textSize="@dimen/font_mid" />

    <TextView
        android:id="@+id/act_business_detail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:drawableLeft="@mipmap/icon_dizhi"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:background="@color/line_color" />
    <TextView
        android:id="@+id/act_business_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/color_while"
        android:drawableLeft="@mipmap/icon_shijian"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/line_color" />
    <TextView
        android:id="@+id/act_business_detail_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:drawableLeft="@mipmap/icon_dianhua"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/line_color" />


</LinearLayout>