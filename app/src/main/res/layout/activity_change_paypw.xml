<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_line_top_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/changePayPw_update_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旧支付密码"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:onClick="changePayPwClick2"
                    android:text="忘记支付密码？"
                    android:textColor="@color/font_blue"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.ningsheng.jietong.View.PassWordInputView
                    android:id="@+id/inputView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp" />

                <ImageView
                    android:id="@+id/changePayPw_iv_eye1"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitEnd"
                    android:layout_weight="1"
                    android:onClick="changePayPwClick3"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/eye_guanbi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新支付密码"
                android:textColor="@color/app_color"
                android:textSize="@dimen/font_small" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.ningsheng.jietong.View.PassWordInputView
                android:id="@+id/inputView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp" />

            <ImageView
                android:id="@+id/changePayPw_iv_eye2"
                android:layout_marginRight="20dp"
                android:scaleType="fitEnd"
                android:layout_weight="1"
                android:padding="10dp"
                android:onClick="changePayPwClick4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@mipmap/eye_guanbi" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/change_paypw_title"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_small" />

    <TextView
        style="@style/button"
        android:layout_marginTop="30dp"
        android:onClick="changePayPwClick1"
        android:text="确认修改" />
</LinearLayout>