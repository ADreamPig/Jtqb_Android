<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_while"
            android:padding="10dp">

            <com.ningsheng.jietong.View.ClearEditText
                android:id="@+id/fragment_keep_call_phone"
                style="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="5dp"
                android:text="132 1311 9473"
                android:textSize="@dimen/font_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_keep_call_phone"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="账户默认手机（中国移动）"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_while"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_edu"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="选择金额"
                android:textColor="@color/app_color"
                android:textSize="@dimen/font_big" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_keep_call_facevalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_while"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_edu"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="选择支付方式"
                android:textColor="@color/app_color"
                android:textSize="@dimen/font_big" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="账户余额（20.88元）"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_mid" />
        </LinearLayout>

        <com.andexert.library.RippleView
            rv_centered="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_messagecode_gary"
                android:text="确认支付"
                android:textColor="@color/color_while"
                android:textSize="18sp" />
        </com.andexert.library.RippleView>

    </LinearLayout>
</ScrollView>